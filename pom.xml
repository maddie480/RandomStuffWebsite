                                    <workingDirectory>${project.build.directory}/random-stuff-website-1.0.0/WEB-INF/classes</workingDirectory>
                                    <arguments>
                                        <argument>-cp</argument>
                                        <argument>.;../../../dependency/snakeyaml-2.3.jar;../../../dependency/commons-io-2.18.0.jar</argument>
                                        <argument>ovh.maddie480.randomstuff.frontend.LuaCutscenesDocumentationIntegrator</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>prepare Radio LNJ</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <workingDirectory>${project.build.directory}/random-stuff-website-1.0.0/WEB-INF/classes</workingDirectory>
                                    <arguments>
                                        <argument>-cp</argument>
                                        <argument>.;../../../dependency/commons-io-2.18.0.jar;../../../dependency/commons-lang3-3.17.0.jar;../../../dependency/json-20240303.jar</argument>
                                        <argument>ovh.maddie480.randomstuff.frontend.PrepareForRadioLNJ</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>extract Discord theme CSS</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>java</executable>
                                    <workingDirectory>${project.build.directory}/random-stuff-website-1.0.0/WEB-INF/classes</workingDirectory>
                                    <arguments>
                                        <argument>-cp</argument>
                                        <argument>.;../../../dependency/commons-io-2.18.0.jar;../../../dependency/jsoup-1.18.3.jar;../../../dependency/json-20240303.jar</argument>
                                        <argument>ovh.maddie480.randomstuff.frontend.ExtractDiscordThemeCSS</argument>
                                    </arguments>
                                </configuration>
