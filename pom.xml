                                    <workingDirectory>${project.build.directory}/random-stuff-website-1.0.0/WEB-INF/classes</workingDirectory>
                                    <arguments>
                                        <argument>-cp</argument>
                                        <argument>.;../../../dependency/commons-io-2.18.0.jar;../../../dependency/commons-lang3-3.17.0.jar;../../../dependency/commons-text-1.13.0.jar;../../../dependency/jsoup-1.18.3.jar;../../../dependency/jvmbrotli-0.2.0.jar;../../../dependency/jvmbrotli-win32-x86-amd64-0.2.0.jar</argument>
                                        <argument>ovh.maddie480.randomstuff.frontend.ParrotQuickGenerator</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
